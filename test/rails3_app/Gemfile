#
# This Gemfile configures all major Ruby on Rails Versions and switches using
# the environment variable "TOAST_TEST_RAILS_VERSION"
#
# It is called by the script ./script/test-all-rails.rb
#

source 'http://rubygems.org'

rails_version = ENV["TOAST_TEST_RAILS_VERSION"] ? ENV["TOAST_TEST_RAILS_VERSION"] : "3.2.17"

gem 'rails', "#{rails_version}"
gem 'sqlite3', '~> 1.3.5'
gem 'i18n', '~> 0.6.4', :platforms => :ruby_18
gem 'ffaker', '= 1.18.0', :platforms => :ruby_18

group :test do
  gem 'shoulda', '~> 3.4.0'
  gem 'pry-rails', '~> 0.2.2', :platforms => :ruby_18
  gem 'pry', '~> 0.9.10', :platforms => :ruby_18
end

gemspec :path => "../.."

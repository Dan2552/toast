#
# This Gemfile configures all major Ruby on Rails Versions and switches using
# the environment variable "TOAST_TEST_RAILS_VERSION" 
#
# It is called by the script ./script/test-all-rails.rb
#

source 'http://rubygems.org'

rails_version = ENV["TOAST_TEST_RAILS_VERSION"] ? ENV["TOAST_TEST_RAILS_VERSION"] : "3.1.4"

if ENV["TOAST_TEST_RAILS_VERSION"] == "edge"
  gem 'rails', :git => 'git://github.com/rails/rails.git'
else
  gem 'rails', "~> #{rails_version}"
end
   
gem 'sqlite3', '~> 1.3.5'

gem 'toast', "~> 0.4.0"

group 'test' do
  gem 'ffaker'
  gem 'shoulda'
end

# To use debugger (ruby-debug for Ruby 1.8.7+, ruby-debug19 for Ruby 1.9.2+)
gem 'ruby-debug', :platform => :ruby_18
gem 'ruby-debug19', :require => 'ruby-debug', :platform => :ruby_19


